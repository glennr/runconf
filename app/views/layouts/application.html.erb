<!DOCTYPE html>
<html>
<head>
  <title>Runconf</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="head">
    runconf
  </div>
  <navigation>
    <% unless current_user %>
      <%= link_to "Sign in with GitHub", "/auth/github" %>
    <% else %>
      <%= link_to 'Sign out', session_path, method: :delete %>
    <% end %>
  </navigation>
  <% [:alert, :notice].each do |type| %>
    <% if flash[type] %>
      <div class="flash <%= type %>"><%= flash[type] %></div>
    <% end %>
  <% end %>

  <%= yield %>

</body>
</html>
