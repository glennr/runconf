<%= form_for @race do |f| %>
  <p>
    <%= f.label :name, 'Name *' %>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :time, 'Date/Time *' %>
    <%= f.text_field :time %>
  </p>

  <p>
    <%= f.label :distance, 'Distance *' %>
    <%= f.text_field :distance %>
  </p>
  
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  
  <p>
    <%= f.label :conference_name %>
    <%= f.text_field :conference_name %>
  </p>
  
  
  <p>
    <%= f.label :conference_url %>
    <%= f.text_field :conference_url %>
  </p>
  
  <p>
    <%= f.label :runkeeper_url, 'URL of the race on <a href="http://www.runkeeper.com">runkeeper.com</a>' %>
    <%= f.text_field :runkeeper_url %>
  </p>
  
  <p>
    <%= f.submit 'Add Race' %>
  </p>
<% end %>